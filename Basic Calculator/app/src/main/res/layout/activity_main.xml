<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8BDBD"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Calculator"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtInputNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="name"
        android:background="@color/white"
        android:hint="Enter Number 1"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="#B8A8A8"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txtCalculator" />

    <EditText
        android:id="@+id/edtInputNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="name"
        android:background="@color/white"
        android:hint="Enter Number 2"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="#B8A8A8"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/edtInputNum1" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="Result"
        android:padding="10dp"
        android:textColorHint="#B8A8A8"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/edtInputNum2" />

    <Button
        android:id="@+id/btnSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="−"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btnSum"
        app:layout_constraintTop_toTopOf="@id/btnSum" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="×"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btnSub"
        app:layout_constraintTop_toTopOf="@id/btnSub" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="÷"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSum" />

    <Button
        android:id="@+id/btnMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="mod"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btnDiv"
        app:layout_constraintTop_toTopOf="@id/btnDiv" />

    <Button
        android:id="@+id/btnPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="%"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btnMod"
        app:layout_constraintTop_toTopOf="@id/btnMod" />




</androidx.constraintlayout.widget.ConstraintLayout>